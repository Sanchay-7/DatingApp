generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  firstName   String
  email       String   @unique
  phoneNumber String   @unique
  password    String
  isVerified  Boolean  @default(false)

  // ✅ Profile fields
  name             String?
  birthday         DateTime?
  gender           String?
  work             String?
  height           Int?
  hometown         String?
  currentLocation  String?

  // ✅ JSON fields
  photos        Json?
  preferences   Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
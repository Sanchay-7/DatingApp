generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum AccountStatus {
  PENDING_APPROVAL
  ACTIVE
  REJECTED
  BANNED
}

enum ReportStatus {
  PENDING
  RESOLVED
}

enum SubscriptionTier {
  FREE
  PREMIUM_MAN
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  EXPIRED
}

// --- MODELS ---
model User {
  id          String   @id @default(uuid())
  firstName   String
  email       String   @unique
  phoneNumber String   @unique
  password    String

  accountStatus AccountStatus @default(PENDING_APPROVAL)

  name            String?
  birthday        DateTime?
  gender          String?
  work            String?
  height          Int?
  hometown        String?
  currentLocation String?

  photos        Json?
  preferences   Json?

  lastActive  DateTime? @default(now())

  // --- Selfie verification for account approval ---
  selfiePhotoUrl  String?   // Cloudinary URL for selfie
  selfiePublicId  String?   // Cloudinary public_id for deletion if needed
  selfieStatus    String?   @default("PENDING") // PENDING, APPROVED, REJECTED
  verificationNote String?  // Admin notes about verification
  verificationAt   DateTime? // When admin verified

  // Premium subscription fields
  subscriptionTier   SubscriptionTier  @default(FREE)
  superSwipesLeft    Int               @default(0)
  spotlightsLeft     Int               @default(0)
  backtrackAvailable Boolean           @default(false)
  
  // Daily limits
  dailyLikesUsed        Int        @default(0)
  dailyLikesResetAt     DateTime?  @default(now())
  dailyBacktracksUsed   Int        @default(0)
  dailyBacktracksResetAt DateTime? @default(now())
  
  // Travel mode (BOOST only)
  travelModeLocation String?
  travelModeActive   Boolean       @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  likesSent     Like[]     @relation("likesSent")
  likesReceived Like[]     @relation("likesReceived")
  conversations ConversationParticipant[]
  messages      Message[]  @relation("messageSender")

  reportsSent     Report[] @relation("reportsSent")
  reportsReceived Report[] @relation("reportsReceived")

  payments      Payment[]
  subscription   Subscription?

  @@index([email])
  @@index([phoneNumber])
  @@index([accountStatus])
  @@index([lastActive])
  @@index([subscriptionTier])
  @@index([selfieStatus])
}


model Like {
  id         String   @id @default(uuid())
  fromUser   User     @relation("likesSent", fields: [fromUserId], references: [id], onDelete: Cascade)
  fromUserId String
  toUser     User     @relation("likesReceived", fields: [toUserId], references: [id], onDelete: Cascade)
  toUserId   String
  createdAt  DateTime @default(now())

  @@unique([fromUserId, toUserId])
  @@index([fromUserId])
  @@index([toUserId])
  @@index([createdAt])
}

model Conversation {
  id           String                    @id @default(uuid())
  secretKey    String
  createdAt    DateTime                  @default(now())
  participants ConversationParticipant[]
  messages     Message[]

  @@index([createdAt])
}

model ConversationParticipant {
  id             String       @id @default(uuid())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  createdAt      DateTime     @default(now())

  @@unique([conversationId, userId])
  @@index([userId])
  @@index([conversationId])
}

model Message {
  id             String       @id @default(uuid())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String
  sender         User         @relation("messageSender", fields: [senderId], references: [id], onDelete: Cascade)
  senderId       String
  ciphertext     String
  iv             String
  authTag        String
  createdAt      DateTime     @default(now())

  @@index([conversationId])
  @@index([senderId])
  @@index([createdAt])
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model Report {
  id             String       @id @default(uuid())
  reason         String
  status         ReportStatus @default(PENDING)
  createdAt      DateTime     @default(now())

  // Optional context
  conversationId String?
  messageId      String?
  messageText    String?
  
  // Who reported it
  reporter       User         @relation("reportsSent", fields: [reporterId], references: [id], onDelete: Cascade)
  reporterId     String

  reportedUser   User @relation("reportsReceived", fields: [reportedUserId], references: [id], onDelete: Cascade)
  reportedUserId String

  @@index([status])
  @@index([reporterId])
  @@index([reportedUserId])
  @@index([createdAt])
}

model Subscription {
  id            String   @id @default(uuid())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String   @unique

  tier          SubscriptionTier @default(FREE)
  status        SubscriptionStatus @default(ACTIVE)
  
  startDate     DateTime @default(now())
  endDate       DateTime?
  
  // Features
  superSwipesWeekly Int @default(0)
  spotlightsMonthly Int @default(0)
  unlimitedExtends  Boolean @default(false)
  unlimitedRematch  Boolean @default(false)
  unlimitedBacktrack Boolean @default(false)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([tier])
  @@index([status])
}

model Payment {
  id            String   @id @default(uuid())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String

  orderId       String   @unique
  cfPaymentId   String?
  amount        Float
  currency      String   @default("INR")
  status        String   @default("PENDING")
  subscriptionTier SubscriptionTier?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([status])
}
